# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost
LOG_LEVEL=info

# Service Discovery
CONSUL_HOST=localhost
CONSUL_PORT=8500
REGISTER_SELF=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@restaurant.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your-firebase-server-key
PUSH_NOTIFICATIONS_ENABLED=true

# Delivery Partner Integrations
UBER_EATS_ENABLED=false
UBER_EATS_API_URL=https://api.uber.com/v1/eats
UBER_EATS_API_KEY=your-uber-eats-api-key

DOORDASH_ENABLED=false
DOORDASH_API_URL=https://openapi.doordash.com
DOORDASH_API_KEY=your-doordash-api-key

GRUBHUB_ENABLED=false
GRUBHUB_API_URL=https://api-gtm.grubhub.com
GRUBHUB_API_KEY=your-grubhub-api-key

# Accounting Integrations
QUICKBOOKS_ENABLED=false
QUICKBOOKS_API_URL=https://sandbox-quickbooks.api.intuit.com
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret
QUICKBOOKS_ACCESS_TOKEN=your-quickbooks-access-token
QUICKBOOKS_COMPANY_ID=your-quickbooks-company-id

XERO_ENABLED=false
XERO_API_URL=https://api.xero.com/api.xro/2.0
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret
XERO_ACCESS_TOKEN=your-xero-access-token
XERO_TENANT_ID=your-xero-tenant-id

SAGE_ENABLED=false
SAGE_API_URL=https://api.sage.com/v3.1
SAGE_API_KEY=your-sage-api-key
SAGE_SUBSCRIPTION_KEY=your-sage-subscription-key