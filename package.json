{
  "name": "restaurant-management-system",
  "version": "1.0.0",
  "description": "Multi-tenant restaurant management SaaS platform",
  "private": true,
  "workspaces": [
    "services/*",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:services\" \"npm run dev:apps\"",
    "dev:services": "concurrently \"npm run dev -w services/tenant-service\" \"npm run dev -w services/pos-service\" \"npm run dev -w services/menu-service\" \"npm run dev -w services/inventory-service\" \"npm run dev -w services/order-service\" \"npm run dev -w services/analytics-service\"",
    "dev:apps": "concurrently \"npm run dev -w apps/admin-dashboard\" \"npm run dev -w apps/pos-interface\"",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:property": "npm run test:property --workspaces",
    "test:integration": "node scripts/run-integration-tests.js",
    "test:integration:verbose": "node scripts/run-integration-tests.js --verbose",
    "test:integration:performance": "node scripts/run-integration-tests.js performance",
    "test:integration:isolation": "node scripts/run-integration-tests.js isolation",
    "test:integration:workflow": "node scripts/run-integration-tests.js workflow",
    "test:all": "npm run test:unit && npm run test:property && npm run test:integration",
    "validate": "node scripts/system-validation.js",
    "validate:verbose": "node scripts/system-validation.js --verbose",
    "validate:fast": "node scripts/system-validation.js --fail-fast",
    "lint": "npm run lint --workspaces",
    "build": "npm run build --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && npm run docker:up",
    "start": "node scripts/start-system.js start",
    "stop": "node scripts/start-system.js stop",
    "restart": "node scripts/start-system.js restart",
    "status": "node scripts/system-status.js",
    "status:watch": "node scripts/system-status.js --watch",
    "services": "node scripts/start-system.js list",
    "start:service": "node scripts/start-system.js start",
    "stop:service": "node scripts/start-system.js stop",
    "restart:service": "node scripts/start-system.js restart"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "colors": "^1.4.0"
  }
}
