      "name": "2. Authentication",
      "item": [
        {
          "name": "Login (Direct Staff Service)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('token', response.token);",
                  "        console.log('Token saved:', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@restaurant.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3006/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3006",
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Login (Via API Gateway)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
