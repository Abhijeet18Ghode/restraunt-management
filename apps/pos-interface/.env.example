# POS Interface Environment Configuration Template
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=http://localhost:3010

# Application Configuration
NEXT_PUBLIC_APP_NAME=Restaurant POS System
NEXT_PUBLIC_APP_VERSION=1.0.0

# Service Discovery (optional)
USE_CONSUL=false
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# Authentication Configuration
NEXT_PUBLIC_TOKEN_STORAGE=cookie
NEXT_PUBLIC_TOKEN_NAME=pos_auth_token
NEXT_PUBLIC_SESSION_TIMEOUT=28800000

# WebSocket Configuration
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=30000

# POS Specific Configuration
NEXT_PUBLIC_ORDER_TIMEOUT=1800000
NEXT_PUBLIC_TABLE_REFRESH_INTERVAL=10000
NEXT_PUBLIC_KITCHEN_UPDATE_INTERVAL=5000

# Payment Configuration
NEXT_PUBLIC_PAYMENT_TIMEOUT=60000
NEXT_PUBLIC_ENABLE_SPLIT_PAYMENTS=true
NEXT_PUBLIC_ENABLE_TIPS=true
NEXT_PUBLIC_DEFAULT_TIP_PERCENTAGES=10,15,20

# Offline Configuration
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_OFFLINE_STORAGE_LIMIT=50
NEXT_PUBLIC_SYNC_INTERVAL=30000

# Customer Configuration
NEXT_PUBLIC_ENABLE_CUSTOMER_LOOKUP=true
NEXT_PUBLIC_ENABLE_LOYALTY_PROGRAM=true
NEXT_PUBLIC_LOYALTY_POINTS_RATIO=10

# Receipt Configuration
NEXT_PUBLIC_ENABLE_EMAIL_RECEIPTS=true
NEXT_PUBLIC_ENABLE_SMS_RECEIPTS=true
NEXT_PUBLIC_ENABLE_PRINT_RECEIPTS=true

# UI Configuration
NEXT_PUBLIC_TOUCH_FRIENDLY=true
NEXT_PUBLIC_LARGE_BUTTONS=true
NEXT_PUBLIC_SOUND_ENABLED=true

# Notification Configuration
NEXT_PUBLIC_NOTIFICATION_TIMEOUT=3000
NEXT_PUBLIC_ENABLE_SOUND_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_VIBRATION=true

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_TABLE_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_KOT_PRINTING=true
NEXT_PUBLIC_ENABLE_INVENTORY_TRACKING=true
NEXT_PUBLIC_ENABLE_STAFF_TRACKING=true

# Performance Configuration
NEXT_PUBLIC_MENU_CACHE_DURATION=300000
NEXT_PUBLIC_CUSTOMER_CACHE_DURATION=600000
NEXT_PUBLIC_ORDER_HISTORY_LIMIT=50